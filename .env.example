# R2 Bucket Configuration
NEXT_PUBLIC_BUCKET_URL=https://your-public-bucket.example.com
CLOUDFLARE_EU_API_ENDPOINT=https://your-eu-endpoint.r2.cloudflarestorage.com
CLOUDFLARE_API_ENDPOINT=https://your-endpoint.r2.cloudflarestorage.com
CLOUDFLARE_BUCKET_NAME=your-bucket-name
CLOUDFLARE_SECRET_ACCESS_KEY=your-secret-access-key
CLOUDFLARE_ACCESS_KEY_ID=your-access-key-id

# Database Configuration
TURSO_AUTH_TOKEN=your-turso-auth-token
TURSO_DATABASE_URL=libsql://your-database.turso.io
# Client-side database configuration (for drizzle config)
NEXT_PUBLIC_TURSO_AUTH_TOKEN=your-turso-auth-token
NEXT_PUBLIC_TURSO_DATABASE_URL=libsql://your-database.turso.io
ADMIN_EMAIL=admin@example.com

# Authentication Configuration
# Set this to your production domain (e.g., giantautoimport.com)
# Leave empty for Vercel preview deployments
COOKIE_DOMAIN=
# Set this to your production URL (e.g., https://giantautoimport.com)
# Leave empty for Vercel preview deployments
NEXT_PUBLIC_APP_URL=
# Image Optimization Configuration
# Option 1: Cloudflare Images (Recommended - requires setup)
# NEXT_PUBLIC_CLOUDFLARE_IMAGES_DOMAIN=imagedelivery.net
# CLOUDFLARE_ACCOUNT_ID=your-cloudflare-account-id
# CLOUDFLARE_API_TOKEN=your-cloudflare-api-token

# Option 2: ImageKit (Alternative)
# NEXT_PUBLIC_IMAGEKIT_URL=https://ik.imagekit.io/your-imagekit-id
# IMAGEKIT_PUBLIC_KEY=your-imagekit-public-key
# IMAGEKIT_PRIVATE_KEY=your-imagekit-private-key

# Performance Settings
NEXT_PUBLIC_IMAGE_PRELOAD_LIMIT=5
NEXT_PUBLIC_IMAGE_CONCURRENCY=2
NEXT_PUBLIC_IMAGE_CACHE_DURATION=300000
